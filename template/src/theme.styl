@import 'styles/vars'
@import 'styles/mixins'
@import 'styles/sidebar'
@import 'styles/version'
@import 'styles/args-table'

body
  margin-top 3.5em
  
  p
    font-family 'Lora', serif
    margin 0 0 1em
  
  h1
    font-family 'Noto Sans', sans-serif
    margin 0.3em 0 0.3em
  
  h2,h3,h4,h5,h6
    font-family 'Noto Sans', sans-serif
    margin 0.3em 0 0.7em
  
  pre
    font-family 'Space Mono', monospace
    margin 0 0 1em
    padding 1.2em
    border-radius 1px
    background lightBg
    font-size 0.8em
  
  ul
    margin: 0 0 1em
    padding: 0 0 0 1.5em
    li
      margin-bottom 0.3em
  
  a
    color primary
    text-decoration none
    margin -0.1em -0.15em
    padding 0.1em 0.15em
    border-radius 0.15em
    transition 0.3s color, 0.3s background
    &:hover
      color white
      background primary
  
  #webapp
    display: flex
    flex-direction: column
    min-height: calc(100vh - 3.5rem)
  
  header
    position fixed
    top 0
    left 0
    right 0
    z-index 1
    background primary
    border-bottom 1px solid darken(primary, 10%)
    padding 0.7rem
    font-size 1.7em
    
    .title
      color white
      font-family 'Lora', serif
      text-shadow 2px 1px darken(primary, 20%)
      &:hover
        cursor pointer
    
    label.right
      float right
      color white
      margin-top: 0.4em
      font-size 0.6em
      
      span.text
        font-family: 'Lora'
      
      select.version-picker
        margin-left 0.4em
        background transparent
        border-color white
  
  .version
    flex: 1
    +desktop()
      position: relative
      padding-left: sidebarSize
    aside,main
      box-sizing border-box
      padding 0 0.7rem
    aside
      position: fixed
      top: 3.5rem
      left: 0
      right: 0
      bottom: 3rem
      max-width: sidebarSize
      +mobile()
        display none
        
    main
      flex: 1
      +desktop()
        .inner
          max-width 760px
          margin: 0 auto
  
  footer
    font-size 0.9rem
    padding  1rem
    text-align center
    border-top 1px solid borderCol
    color #889
    background lightBg
    
